        "@tiptap/extension-highlight": "^2.10.2",
        "@tiptap/extension-horizontal-rule": "^2.10.2",
        "@tiptap/extension-link": "^2.9.1",
        "@tiptap/extension-placeholder": "^2.10.2",
        "@tiptap/extension-subscript": "^2.10.2",
